extends ../base.pug

block content
  doctype html
  html(lang="fr")
    head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")

    body
      .container
        .text-center.mb-5.mt-5
          h1 Votre candidature

        form(method="post", role="form", id="application")
          .mb-3
            label(for="title", class="form-label") Titre de l'annonce:
            input(type="text", name="title", readonly, value=advertisementTitle, class="form-control")

          .mb-3
            label(for="date", class="form-label") Date du jour:
            input(type="date", name="applicationDate", id="date", readonly, class="form-control")

          .mb-3
            label(for="subject", class="form-label") Sujet de mail:
            input(type="text", name="subject", id="subject", class="form-control")

          .mb-3
            label(for="content", class="form-label") Contenu:
            textarea(name="content", rows="4", id="content", class="form-control")

          .mb-3
            label(for="email", class="form-label") Votre Email:
            input(type="email", name="email", id="email", class="form-control")

          .d-flex.justify-content-center.mb-5
            button(type="submit", class="btn btn-primary") Envoyer

  script(src="/js/job_applications.js")