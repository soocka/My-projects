extends ../base.pug

block content
  doctype html
  html(lang="fr")
    head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    body
      .container.mt-4
        h1.text-center.mb-5.text-decoration-underline Entreprises partenaires
        each company in companiesList
          section.grid
            article.advert.bg-light.mx-3.mb-4.p-3
                h2.text-center.mt-3.mb-4.text-uppercase= company.Name
                h3.h6.text-center.mt-3.mb-4= company.Industry
                p.mt-3.mb-4= company.Description
                h4.small.mt-3.mb-4.fw-bolder= company.Email